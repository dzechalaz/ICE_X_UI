#:kivy 2.0.0
MDScreen:
    # Set sc screen name
    name: "orden_lista_vaso_chocolate"
    # Start the progress bar animation when the screen is active

    on_enter: 
        app.idle_on()
        app.setup_mdb()
        app.total_money_label(total_money_label,'orden_lista_vaso_chocolate')
        app.total_money_label(amount_to_charge_label,'orden_lista_vaso_chocolate')
    on_leave:   
        app.idle_off()
    
    MDBoxLayout:
        # Add float layout
        MDFloatLayout:
            # Add Gif image
            Image:
                source: 'assets/gif_orden_lista_vaso_chocolate.gif'   # Ruta de tu imagen
                pos: self.pos
                id: gif
                size: root.width * 1, root.height * 1
                anim_delay: -1
                anim_loop: 1
                anim_reset: True

            MDLabel:
                id: total_money_label
                text: ""
                halign: "center"
                opacity: 0
                x: dp(325)
                y: dp(-135)
                font_size: "40sp"
            
            MDLabel:
                id: amount_to_charge_label
                text: "$1"
                halign: "center"
                opacity: 0
                x: dp(325)
                y: dp(-280)
                font_size: "40sp"

            Button:
                background_color: 1, 1, 1, 0.3
                text: ''
                size_hint: None, None
                size: root.width * 0.2, root.height * 0.45
                pos: root.width * 0.7, root.height * 0.2
                on_press:  app.cancelar_venta()  

            Button:
                background_color: 1, 1, 1, 0
                text: ''
                size_hint: None, None
                size: root.width * 0.1, root.height * 0.15
                pos: root.width * 0.02, root.height * 0.83
                on_press: app.change_recipiente()