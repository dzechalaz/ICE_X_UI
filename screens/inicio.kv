#:kivy!
MDScreen:
    # Set screen name
    name: "inicio"  
    # Add box layout
    MDBoxLayout:
        # Add float layout
        MDFloatLayout:
            # Add Gif image
            Image:
                source: 'assets/gif_inicio.gif'   # Ruta de tu imagen
                pos: self.pos
                size: root.width * 1, root.height * 1
                anim_delay: 0.05
                # anim_loop: 1
                anim_reset: True

            Button:
                background_color: 1, 1, 1, 0
                text: ''
                size_hint: None, None
                size: root.width * 0.98, root.height * 0.95
                pos: root.width * 0.01, root.height * 0.02
                on_press: app.change_recipiente()

