#:kivy 2.0.0
MDScreen:
    # Set sc screen name
    name: "recipiente"
    # Start the progress bar animation when the screen is active

    on_enter: 

        self.ids.gif.anim_delay = 0
        gif._coreimage.anim_reset(True)
        app.idle_on()
    on_leave:   

        app.idle_off()

    MDBoxLayout:
        # Add float layout
        MDFloatLayout:
            # Add Gif image
            Image:
                source: 'assets/gif_recipiente.gif'   # Ruta de tu imagen
                pos: self.pos
                id: gif
                size: root.width * 1, root.height * 1
                anim_delay: -1
                anim_loop: 1
                
                

            Button:
                background_color: 1, 1, 1, 0
                text: ''
                size_hint: None, None
                size: root.width * 0.3, root.height * 0.6
                pos: root.width * 0.1, root.height * 0.05
                on_press: app.change_vaso()



            Button:
                background_color: 1, 1, 1, 0
                text: ''
                size_hint: None, None
                size: root.width * 0.3, root.height * 0.6
                pos: root.width * 0.60, root.height * 0.05
                on_press: app.change_cono()






































