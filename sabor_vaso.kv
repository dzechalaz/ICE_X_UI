#:kivy
MDScreen:
    # Set sc screen name
    name: "sabor_vaso"
    # Start the progress bar animation when the screen is active

    # on_enter: 
        # self.ids.progress.anim_delay = 0
        # self.ids.progress.anim_reset = True # Llama a una funci√≥n para reiniciar el GIF
        # self.ids.progress.source = ''
        # self.ids.progress.source = 'assets/gif_recipiente.gif'
    
    MDBoxLayout:
        # Add float layout
        MDFloatLayout:
            # Add Gif image
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        	Image:
        		source: 'arm-x.png'   #256*256 pxls
        		pos: root.width * 0.35, root.height * 0.75
        		size: root.width * 0.3, root.height * 0.3
        		allow_stretch: False
        	Image:
        		source: 'descripcion_sabor (vainilla-chocolate).png'   #256*256 pxls
        		pos: root.width * 0.005, root.height * 0.25
        		size: root.width * 1, root.height * 1
        		allow_stretch: False

            Button:
                background_color: 1, 1, 1, 0
                text: ''
                size_hint: None, None
                size: root.width * 0.2, root.height * 0.45
                pos: root.width * 0.11, root.height * 0.2
                on_press: root.change_vainilla()
                Image:
                    source: 'vaso_vainilla.png'   #256*256 pxls
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.9
                    pos_hint: root.width * 0.3, root.height * 1
                    allow_stretch: False

                Image:
                    source: 'letra_vainilla.png'   #256*256 pxls
                    size_hint: None, None
                    size: root.width * 0.4, root.height * 0.3
                    pos_hint: root.width * 0.3, root.height * 1
                    allow_stretch: False


            Button:
                background_color: 1, 1, 1, 0
                text: ''
                size_hint: None, None
                size: root.width * 0.2, root.height * 0.45
                pos: root.width * 0.4, root.height * 0.2
                on_press: root.change_megamix()
                Image:
                    source: 'vaso_megamix.png'   #256*256 pxls
                    size_hint: None, None
                    size: root.width * 1, root.height * 0.9
                    pos_hint: root.width * 0.9, root.height * 1
                    allow_stretch: False

                Image:
                    source: 'letra_megamix.png'   #256*256 pxls
                    size_hint: None, None
                    size: root.width * 1.01, root.height * 0.3
                    pos_hint: root.width * 0.9, root.height * 1
                    allow_stretch: False